---
import '../styles/global.css';

const pageTitle = "About The Cat Gallery";

const identity = {
	firstName: "Larry",
	country: "Cat Island",
	occupation: "a judging others specialist",
	hobbies: ["Judging", "Scaring others", "Ice cream"],
};

const skills = ["Everything", "Eating", "Judging"];

const happy = true;
const finished = false;
const goal = 3;

const skillColor = "crimson";
const fontWeight = "bold";
const textCase = "lowercase";
---

<html>
    <head> 
			<meta charset="utf-8" />
			<meta name="viewport" content="width=device-width" />
			<meta name="generator" content="{Astro.generator}" >

			<link rel="icon" type="/apparent-aperture/src/assets/astro.svg" />

			<style define:vars={{skillColor, fontWeight, textCase}}>
				h1 {
					color: purple;
					font-size: 4rem;
				}
				.skill{
					color: var(--skillColor);
					font-weight: var(--fontWeight);
					text-transform: var(--textCase);
				}
			</style>

			<title> {pageTitle} </title>
		</head>

		<body>
            <nav>
				<ul>
					<li> <a href="/"> Home </a> </li>
					<li> <a href="/about/"> About </a> </li>
                    <li> <a href="/blog/"> Blog </a></li>
				</ul>
			</nav>
			
            

			<h1> Why was this website created? </h1>
			<h2> {pageTitle} </h2>
			<p> For fun! </p>

			<h2> About Author (not really) </h2>
			<p> Here are a few facts about me. </p>
			<ul>
				<li> My name is {identity.firstName}. </li>
				<li> I live in {identity.country}, and I work as {identity.occupation}.</li>
				{identity.hobbies.length >= 2 && 
					<li> Two of my hobbies are: {identity.hobbies[0]} and {identity.hobbies[1]}</li>}
			</ul>

			<p> My skills are: </p>
			<ul>
				{skills.map((skill) => <li class="skill">{skill}</li>)}
			</ul>

			{happy && <p>I am happy to be learning Astro!</p>}
			{finished && <p>I finished this tutorial!</p>}
			{goal === 3 ? <p>My goal is to finish in 3 days.</p> : <p>My goal is not 3 days.</p>}

		</body>

</html>